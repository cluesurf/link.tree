
load @nerdbond/land/code/javascript/base/html-element
  take form html-element

load @nerdbond/land/code/javascript/base/native-string
  take form native-string

load @nerdbond/land/code/javascript/base/native-void
  take form native-void

load @nerdbond/land/code/javascript/stripejs/element/card-element-options
  take form card-element-options

load @nerdbond/land/code/javascript/stripejs/element/iban-element-options
  take form iban-element-options

load @nerdbond/land/code/javascript/stripejs/element/ideal-bank-options
  take form ideal-bank-options

load @nerdbond/land/code/javascript/stripejs/element/on-change
  take form on-change

load @nerdbond/land/code/javascript/stripejs/element/payment-button-options
  take form payment-button-options

load @nerdbond/seed/code/form/form
  take form form
    save form form-link-text

load @nerdbond/seed/code/form/sink
  take form sink
    save form sink-link-text

form stripe-element, name <StripeElement>
  task mount, name <mount>
    take element
      like sink-link-text
        like html-element
        like native-string
    free seed, like native-void

  task on, name <on>
    take event
      like sink-link-text
        text <blur>
        text <focus>
        text <ready>
    take handler
      like task
        free seed, like native-void
    free seed, like native-void

  task on, name <on>
    take event, text <click>
    take handler
      like task
        take event
          like form-link-text
            take prevent-default, name <preventDefault>
              like task
                free seed, like native-void
              lock free
        free seed, like native-void
    free seed, like native-void

  task on, name <on>
    take event, text <change>
    take handler
      like task
        take event, like on-change
        free seed, like native-void
    free seed, like native-void

  task blur, name <blur>
    free seed, like native-void

  task clear, name <clear>
    free seed, like native-void

  task destroy, name <destroy>
    free seed, like native-void

  task focus, name <focus>
    free seed, like native-void

  task unmount, name <unmount>
    free seed, like native-void

  task update, name <update>
    take options
      like sink-link-text
        like card-element-options
        like iban-element-options
        like ideal-bank-options
        like payment-button-options
    free seed, like native-void
