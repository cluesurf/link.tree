
load @treesurf/land/code/javascript/base/native-number
  take form native-number

load @treesurf/seed/code/form/sink
  take form sink
    save form sink-link-text

form code-verification, name <CodeVerification>
  take attempts-remaining, name <attempts_remaining>
    like native-number
    lock free
  take status, name <status>
    like sink-link-text
      text <pending>
      text <attempts_remaining>
      text <succeeded>
      text <failed>
      text <attempts_remaining>
    lock free
