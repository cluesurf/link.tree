
load @tunebond/snow/base/integer
  take form integer

load @tunebond/snow/base/string
  take form string

form segment-reference, name <SegmentReference>
  note <Specifies the segment identifier and version of a segment.>
  take id, name <Id>
    like string
    note <The unique identifier for the segment.>
  take version, name <Version>
    like integer
    void take
    note <The version number of the segment.>