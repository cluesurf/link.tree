
load @nerdbond/snow/amazonaws.com/sns/2010-03-31/base/authorization-error-exception
  take form authorization-error-exception

load @nerdbond/snow/amazonaws.com/sns/2010-03-31/base/internal-error-exception
  take form internal-error-exception

load @nerdbond/snow/amazonaws.com/sns/2010-03-31/base/invalid-parameter-exception
  take form invalid-parameter-exception

load @nerdbond/snow/amazonaws.com/sns/2010-03-31/base/not-found-exception
  take form not-found-exception

load @nerdbond/snow/base/native-string
  take form native-string

boot get-remove-permission, name <GET_RemovePermission>
  deed get
  note <Removes a statement from a topic's access control policy.>

  take topic-arn
    like native-string
    note <The ARN of the topic whose access control policy you wish to modify.>
  take label
    like native-string
    note <The unique label of the statement you want to remove.>
  take action
    like native-string
  take version
    like native-string

  line </#Action=RemovePermission>

  find <TopicArn>, loan topic-arn
  find <Label>, loan label
  find <Action>, loan action
  find <Version>, loan version

  loot 200
    note <Success>
  loot 480
    seed xml, like invalid-parameter-exception
    note <InvalidParameterException>
  loot 481
    seed xml, like internal-error-exception
    note <InternalErrorException>
  loot 482
    seed xml, like authorization-error-exception
    note <AuthorizationErrorException>
  loot 483
    seed xml, like not-found-exception
    note <NotFoundException>