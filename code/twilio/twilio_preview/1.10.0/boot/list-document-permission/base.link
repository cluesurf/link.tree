
load @nerdbond/snow/base/native-integer
  take form native-integer

load @nerdbond/snow/base/native-string
  take form native-string

boot list-document-permission, name <ListDocumentPermission>
  note <Retrieve a list of all Permissions applying to a Sync Document.>

  take service-sid
    like native-string
  take document-sid
    like native-string
    note <Identifier of the Sync Document. Either a SID or a unique name.>
  take page-size
    like native-integer
    note <How many resources to return in each list page. The default is 50, and the maximum is 1000.>
    void take

  line </Sync/Services/{service-sid}/Documents/{document-sid}/Permissions>

  find <PageSize>, loan page-size

  loot 200
    seed json
      like form
        like take meta, name <meta>
        like   like form
        like     take first-page-url, name <first_page_url>
        like       void take
        like     take key, name <key>
        like       void take
        like     take next-page-url, name <next_page_url>
        like       void take
        like     take page, name <page>
        like       void take
        like     take page-size, name <page_size>
        like       void take
        like     take previous-page-url, name <previous_page_url>
        like       void take
        like     take url, name <url>
        like       void take
        like   void take
        like take permissions, name <permissions>
        like   void take
    note <OK>
