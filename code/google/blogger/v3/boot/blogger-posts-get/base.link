
load @tunebond/snow/base/native-boolean
  take form native-boolean

load @tunebond/snow/base/native-integer
  take form native-integer

load @tunebond/snow/base/native-string
  take form native-string

load @tunebond/snow/googleapis.com/blogger/v3/base/post
  take form post

boot blogger-posts-get, name <blogger.posts.get>
  deed get
  note <Gets a post by blog id and post id>

  take blog-id
    like native-string
  take post-id
    like native-string
  take fetch-body
    like native-boolean
    void take
  take fetch-images
    like native-boolean
    void take
  take max-comments
    like native-integer
    void take
  take view
    like native-string
    void take

  line </v3/blogs/{blog-id}/posts/{post-id}>

  find <fetchBody>, loan fetch-body
  find <fetchImages>, loan fetch-images
  find <maxComments>, loan max-comments
  find <view>, loan view

  loot 200
    seed json, like post
    note <Successful response>
