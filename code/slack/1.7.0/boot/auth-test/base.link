
load @wavebond/snow/base/native-string
  take form native-string

load @wavebond/snow/slack.com/1.7.0/base/defs-bot-id
  take form defs-bot-id

load @wavebond/snow/slack.com/1.7.0/base/defs-ok-false
  take form defs-ok-false

load @wavebond/snow/slack.com/1.7.0/base/defs-ok-true
  take form defs-ok-true

load @wavebond/snow/slack.com/1.7.0/base/defs-team
  take form defs-team

load @wavebond/snow/slack.com/1.7.0/base/defs-user-id
  take form defs-user-id

boot auth-test, name <auth_test>
  deed get
  note <Checks authentication & identity.>

  take token
    like native-string
    note <Authentication token. Requires scope: `none`>

  line </auth.test>

  hint <token>, loan token

  loot 200
    seed json
      like form
        take bot-id, name <bot_id>
          like defs-bot-id
          void take
        take is-enterprise-install, name <is_enterprise_install>
          void take
        take ok, name <ok>
          like defs-ok-true
        take team, name <team>
        take team-id, name <team_id>
          like defs-team
        take url, name <url>
        take user, name <user>
        take user-id, name <user_id>
          like defs-user-id
    note <Standard success response when used with a user token>
  loot fall
    seed json
      like form
        take callstack, name <callstack>
          void take
        take error, name <error>
        take ok, name <ok>
          like defs-ok-false
    note <Standard failure response when used with an invalid token>
