
load @drumwork/snow/base/native-string
  take form native-string

load @drumwork/snow/slack.com/1.7.0/base/defs-app-id
  take form defs-app-id

load @drumwork/snow/slack.com/1.7.0/base/defs-bot-id
  take form defs-bot-id

load @drumwork/snow/slack.com/1.7.0/base/defs-ok-false
  take form defs-ok-false

load @drumwork/snow/slack.com/1.7.0/base/defs-ok-true
  take form defs-ok-true

load @drumwork/snow/slack.com/1.7.0/base/defs-user-id
  take form defs-user-id

boot bots-info, name <bots_info>
  deed get
  note <Gets information about a bot user.>

  take token
    like native-string
    note <Authentication token. Requires scope: `users:read`>
  take bot
    like native-string
    note <Bot user to get info on>
    void take

  line </bots.info>

  find <token>, loan token
  find <bot>, loan bot

  loot 200
    seed json
      like form
        take bot, name <bot>
          like form
            take app-id, name <app_id>
              like defs-app-id
            take deleted, name <deleted>
            take icons, name <icons>
              like form
                take image-36, name <image_36>
                take image-48, name <image_48>
                take image-72, name <image_72>
            take id, name <id>
              like defs-bot-id
            take name, name <name>
            take updated, name <updated>
            take user-id, name <user_id>
              like defs-user-id
              void take
        take ok, name <ok>
          like defs-ok-true
    note <When successful, returns bot info by bot ID.>
  loot fall
    seed json
      like form
        take callstack, name <callstack>
          void take
        take error, name <error>
        take ok, name <ok>
          like defs-ok-false
    note <When no bot can be found, it returns an error.>