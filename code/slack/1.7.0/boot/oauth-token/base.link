
load @tunebond/snow/base/native-boolean
  take form native-boolean

load @tunebond/snow/base/native-string
  take form native-string

load @tunebond/snow/slack.com/1.7.0/base/defs-ok-false
  take form defs-ok-false

load @tunebond/snow/slack.com/1.7.0/base/defs-ok-true
  take form defs-ok-true

boot oauth-token, name <oauth_token>
  deed get
  note <Exchanges a temporary OAuth verifier code for a workspace token.>

  take client-id
    like native-string
    note <Issued when you created your application.>
    void take
  take client-secret
    like native-string
    note <Issued when you created your application.>
    void take
  take code
    like native-string
    note <The `code` param returned via the OAuth callback.>
    void take
  take redirect-uri
    like native-string
    note <This must match the originally submitted URI (if one was sent).>
    void take
  take single-channel
    like native-boolean
    note <Request the user to add your app only to a single channel.>
    void take

  line </oauth.token>

  find <client_id>, loan client-id
  find <client_secret>, loan client-secret
  find <code>, loan code
  find <redirect_uri>, loan redirect-uri
  find <single_channel>, loan single-channel

  loot 200
    seed json
      like form
        take ok, name <ok>
          like defs-ok-true
    note <Success example using a workspace app produces a very different kind of response>
  loot fall
    seed json
      like form
        take ok, name <ok>
          like defs-ok-false
    note <Typical error response>
